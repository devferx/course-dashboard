// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Example {
    id String @id @default(cuid())
}

model Course {
    id          String       @id @default(uuid())
    name        String
    slug        String
    status      CourseStatus
    teacher     User         @relation(fields: [userId], references: [id])
    duration    Int
    module      Module[]
    price       Int
    currency    String
    imageUrl    String
    description String
    userId      String
    createdAt   DateTime     @default(now())
    updatedAt   DateTime     @updatedAt

    @@unique([slug])
}

enum CourseStatus {
    PUBLISHED
    DRAFT
}

model User {
    id         String   @id @default(uuid())
    name       String
    email      String
    password   String
    profilePic String   @default("https://i.ibb.co/6Y7ZrLm/pngtree-user-vector-avatar-png-image-1541962.jpg")
    role       UserRole
    courses    Course[]
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
}

enum UserRole {
    ADMIN
    TEACHER
    STUDENT
}

model Lesson {
    id          String   @id @default(uuid())
    title       String
    slug        String
    module      Module   @relation(fields: [moduleId], references: [id])
    moduleId    String
    videoLink   String
    description String
    courseId    String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}

enum LenssonStatus {
    PUBLIC
    PRIVATE
}

model Module {
    id        String   @id @default(uuid())
    title     String
    slug      String
    order     Int
    course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
    lessons   Lesson[]
    courseId  String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
